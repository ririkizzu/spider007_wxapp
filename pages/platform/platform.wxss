page {
  background-color: #F1F1F1;
}

.title {
  font-weight: normal;
}

.platform-item {
  margin: 24rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  background-color: white;
  display: flex;
}

.platform-item .platform-img image {
  width: 150rpx;
  display: flex;
}

.platform-item .platform-detail {
  margin-left: 24rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}

.platform-item .platform-detail .platform-name {
  font-size: 30rpx;
}

.platform-item .platform-detail .platform-desc {
  font-size: 24rpx;
  color: #9e9e9e;
}

.platform-item .platform-detail .platform-name .item-name-tag {
  display: flex;
}

.platform-item .platform-detail .platform-name .item-name-tag .item-name-tag-item {
  font-size: 16rpx;
  color: #9e9e9e;
  background-color: #f5f5f5;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  margin-right: 6rpx;
  border-radius: 14rpx;
}

.platform {
  display: flex;
  flex-direction: column;
  align-items: center;
}