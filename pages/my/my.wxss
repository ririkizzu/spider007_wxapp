page {
  background-color: #F1F1F1;
}

.head {
  background: linear-gradient(#2E2EF3, #588AF6);
  height: 400rpx;
  position: relative;
}

.body {
  position: absolute;
  top: 200rpx;
  background-color: #F1F1F1;
  width: 100%;
  height: 700rpx;
}

.content {
  position: relative;
  top: -140rpx;
}

.user-title {
  background-color: white;
  margin: 24rpx;
  padding: 24rpx;
  height: 140rpx;
  box-shadow: 0 12rpx 28rpx rgba(153, 153, 153, 0.34);
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-title-left {
  display: flex;
}

.user-title-image image {
  width: 140rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-nick_name {
  font-weight: bold;
  font-size: 36rpx;
}

.user-id {
  color: #9e9e9e;
  display: flex;
  align-items: center;
}

.user-id image {
  width: 32rpx;
}

#user-edit {
  color: #9e9e9e;
  font-size: 28rpx;
  font-weight: normal;
  width: 160rpx;
  height: 60rpx;
  line-height: 30rpx;
  border-radius: 80rpx;
}

.user-menu {
  background-color: white;
  margin: 24rpx;
  padding: 36rpx;
  height: 340rpx;
  box-shadow: 0 12rpx 28rpx rgba(153, 153, 153, 0.34);
  border-radius: 16rpx;
}

.menu-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.menu-item #icon {
  width: 50rpx;
  padding-right: 10rpx;
}

.menu-item #text {
  text-align: center;
}

.menu-item #arrow {
  width: 36rpx;
}

.menu-item .coin {
  display: flex;
  align-items: center;
}

.menu-item #coin-img {
  width: 52rpx;
}

.menu-item #coin-text {
  display: flex;
  color: orange;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  margin-right: 10rpx;
}

.menu-item-1 {
  height: 100%;
  display: flex;
  align-items: center;
}

#button {
  position: absolute;
  width: 630rpx;
  height: 100rpx;
  opacity: 0;
}